<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="proj.spring.mes.dao.mapper.P0402_ClientMapperDAO">


  <resultMap id="ClientMap" type="proj.spring.mes.dto.P0402_ClientDTO">
    <id     property="client_id"  column="CLIENT_ID"/>
    <result property="client_name" column="CLIENT_NAME"/>
    <result property="client_tel"  column="CLIENT_TEL"/>
    <result property="worker_id"   column="WORKER_ID"/>
  </resultMap>

  <sql id="whereClause">
    <where>
      <if test="client_id != null and client_id != ''">
        AND CLIENT_ID LIKE '%' || #{client_id} || '%'
      </if>
      <if test="clientName != null and clientName != ''">
        AND CLIENT_NAME LIKE '%' || #{clientName} || '%'
      </if>
      <if test="clientTel != null and clientTel != ''">
        AND CLIENT_TEL LIKE '%' || #{clientTel} || '%'
      </if>
      <if test="workerId != null and workerId != ''">
        AND WORKER_ID LIKE '%' || #{workerId} || '%'
      </if>
    </where>
  </sql>

  <!-- 목록  -->
  <select id="findClients" resultMap="ClientMap">
    SELECT * FROM (
      SELECT t.*, ROWNUM rn FROM (
        SELECT CLIENT_ID, CLIENT_NAME, CLIENT_TEL, WORKER_ID
        FROM V3_CLIENT
        <include refid="whereClause"/>
        ORDER BY CLIENT_ID DESC
      ) t
      WHERE ROWNUM &lt;= #{endRow}
    )
    WHERE rn &gt; #{startRow}
  </select>

  <!-- 카운트 -->
  <select id="countClients" resultType="int">
    SELECT COUNT(1)
    FROM V3_CLIENT
    <include refid="whereClause"/>
  </select>

  <!-- 등록  -->
  <insert id="insertClient" parameterType="proj.spring.mes.dto.P0402_ClientDTO">
    INSERT INTO V3_CLIENT (
      CLIENT_ID, CLIENT_NAME, CLIENT_TEL, WORKER_ID
    ) VALUES (
      #{client_id}, #{client_name}, #{client_tel}, #{worker_id}
    )
  </insert>

  <!-- 삭제 -->
  <delete id="deleteByIds">
    DELETE FROM V3_CLIENT
    WHERE CLIENT_ID IN
    <foreach collection="ids" item="id" open="(" separator="," close=")">
      #{client_id}
    </foreach>
  </delete>
  
  
<select id="selectClientOne" resultMap="ClientMap" parameterType="proj.spring.mes.dto.P0402_ClientDTO">
  SELECT CLIENT_ID, CLIENT_NAME, CLIENT_TEL, WORKER_ID
  FROM V3_CLIENT
  WHERE CLIENT_ID = #{client_id}
</select>



<update id="updateClient" parameterType="proj.spring.mes.dto.P0402_ClientDTO">
	UPDATE V3_client SET client_name = #{client_name} , client_tel = #{client_tel}, worker_id = #{worker_id}
 	WHERE CLIENT_ID = #{client_id}
</update>

</mapper>
